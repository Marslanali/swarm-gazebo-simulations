<?xml version="1.0" encoding="utf-8"?>
<launch>

  <!-- parameters that can be overrided -->
  <arg name="use_sim_time" default="true"/>
  <arg name="gui" default="true"/>
  <arg name="headless" default="false"/>
  <arg name="debug" default="false"/>
  <!-- experimental setup of the robots -->
  <arg name="robot_name" default="two_wheel_robot"/>
  <!-- We resume the logic in empty_world.launch, changing only the name of the world to be launched -->
  <include file="$(find gazebo_ros)/launch/empty_world.launch">
    <arg name="world_name" value="$(find two_wheel_robot_gazebo)/worlds/two_wheel_robot.world"/>
    <arg name="use_sim_time" value="$(arg use_sim_time)"/>
    <arg name="gui" value="$(arg gui)"/>
    <arg name="headless" value="$(arg headless)"/>
    <arg name="debug" value="$(arg debug)"/>
    <!-- more default parameters can be changed here -->
  </include>

  <param name="robot_description" command="$(find xacro)/xacro.py '$(find two_wheel_robot_description)/urdf/two_wheel_robot.urdf'"/>

  <node name="myrobot_spawn" pkg="gazebo_ros" type="spawn_model"
   args="-param robot_description -urdf -x 0.0 -y 0.0 -z 0.1 -model two_wheel_robot" respawn="false" output="screen"/>




</launch>
